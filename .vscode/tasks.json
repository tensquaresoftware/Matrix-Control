{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build-windows",
                "-G", "Visual Studio 17 2022",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "windows": {
                "args": [
                    "-B", "build-windows",
                    "-G", "Visual Studio 17 2022",
                    "-DCMAKE_BUILD_TYPE=Debug"
                ]
            },
            "osx": {
                "args": [
                    "-B", "build-macos",
                    "-G", "Ninja",
                    "-DCMAKE_BUILD_TYPE=Debug"
                ]
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build: Standalone",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build-windows",
                "--target", "Matrix-Control_Standalone",
                "--config", "Debug"
            ],
            "windows": {
                "args": [
                    "--build", "build-windows",
                    "--target", "Matrix-Control_Standalone",
                    "--config", "Debug"
                ]
            },
            "osx": {
                "args": [
                    "--build", "build-macos",
                    "--target", "Matrix-Control_Standalone",
                    "--config", "Debug"
                ]
            },
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build: AU",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build-macos",
                "--target", "Matrix-Control_AU",
                "--config", "Debug"
            ],
            "osx": {
                "args": [
                    "--build", "build-macos",
                    "--target", "Matrix-Control_AU",
                    "--config", "Debug"
                ]
            },
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Build: VST3",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build-windows",
                "--target", "Matrix-Control_VST3",
                "--config", "Debug"
            ],
            "windows": {
                "args": [
                    "--build", "build-windows",
                    "--target", "Matrix-Control_VST3",
                    "--config", "Debug"
                ]
            },
            "osx": {
                "args": [
                    "--build", "build-macos",
                    "--target", "Matrix-Control_VST3",
                    "--config", "Debug"
                ]
            },
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build: All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build-windows",
                "--config", "Debug"
            ],
            "windows": {
                "args": [
                    "--build", "build-windows",
                    "--config", "Debug"
                ]
            },
            "osx": {
                "args": [
                    "--build", "build-macos",
                    "--config", "Debug"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf", "build-macos", "build-windows"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "Remove-Item -Recurse -Force build-macos,build-windows -ErrorAction SilentlyContinue"
                ]
            },
            "group": "build"
        }
    ]
}
