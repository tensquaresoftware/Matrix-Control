{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build: Standalone",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "Matrix-Control_Standalone",
                "--config", "Debug"
            ],
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build: AU",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "Matrix-Control_AU",
                "--config", "Debug"
            ],
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build: VST3",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "Matrix-Control_VST3",
                "--config", "Debug"
            ],
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build: All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake: Configure"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build"
        }
    ]
}